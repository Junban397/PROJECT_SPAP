<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="180dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <NumberPicker
            android:id="@+id/dayNum"
            android:layout_width="50dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:theme="@style/ThemeOverlay.NumberPicker" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <NumberPicker
            android:id="@+id/cycle"
            android:layout_width="50dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:theme="@style/ThemeOverlay.NumberPicker" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center"
            android:scrollbarSize="18dp"
            android:text="마다 한번"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/cancel_cycle_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/radius_calcel_btn"
            android:fontFamily="@font/a1009_1"
            android:text="취소"
            android:textSize="16dp" />

        <View
            android:layout_width="30dp"
            android:layout_height="0dp" />

        <android.widget.Button
            android:id="@+id/confirm_cycle_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/radius_btn_00bb90"
            android:fontFamily="@font/a1009_1"
            android:text="확인"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>