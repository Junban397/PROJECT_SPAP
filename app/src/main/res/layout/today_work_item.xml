<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- ViewModel 선언 -->
        <variable
            name="plant_event"
            type="com.example.spap.data.CombinedPlantEvent" />
    </data>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/plant_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:imageUrl="@{plant_event.plantImage}"

            />

        <RelativeLayout
            android:id="@+id/plant_information"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/plant_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/a1009_2"
                android:gravity="center_vertical"
                android:text="@{plant_event.plantName}"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/plant_type"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/plant_name"
                android:fontFamily="@font/a1009_2"
                android:text="@{plant_event.plantType}"
                android:textSize="10dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/work_name"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="23dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center_vertical"
            android:text="@{plant_event.plantEvent.title}"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>
</layout>